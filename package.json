{
  "name": "feat-mvp-between-sessions",
  "version": "0.1.0",
  "description": "Mental wellness companion for between-session support",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "dev": "node server.js",
    "start": "node server.js",
    "lint": "node --check server.js",
    "build": "npm --prefix backend run build && npm --prefix frontend run build",
    "e2e": "playwright test",
    "ingest:clinical-library": "npm --prefix backend run ingest:clinical-library",
    "pilot:seed": "npm --prefix backend run pilot:seed",
    "pilot:smoke": "bash scripts/smoke_pilot_seed.sh && bash scripts/smoke_pilot_metrics.sh",
    "gtm:pdf": "python3 scripts/build_gtm_pdf.py"
  },
  "keywords": [
    "mental-wellness",
    "coaching",
    "web"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.51.0",
    "prisma": "^6.19.1"
  },
  "dependencies": {
    "@prisma/client": "^6.19.1"
  }
}
